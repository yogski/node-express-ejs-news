<html>
  <head>
    <title>News</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div class="row">
      <h2 style="align-items: center">NEWS TODAY</h2>
      <hr />
    </div>
    <div class="row">
      <% for(var i=0; i < articles.length; i++) { %>
      <div
        class="column"
        style="display: flex; justify-content: center; align-items: center"
      >
        <div
          class="content"
          style="width: 30%; height: auto; align-items: center"
        >
          <a href="<%= articles[i].url %>">
            <img
              src="<%= articles[i].urlToImage %>"
              alt="<%= articles[i].source.name %>"
              style="width: 100%; height: auto"
            />
          </a>
          <h4><%= articles[i].title %></h4>
          <p><%= articles[i].description %></p>
          <hr />
        </div>
      </div>
      <% } %>
    </div>
  </body>
</html>
